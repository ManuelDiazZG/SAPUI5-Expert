<mvc:View controllerName="logaligroup.SAPUI5.controller.HelloPanel" 
                xmlns="sap.m" 
                xmlns:mvc="sap.ui.core.mvc" 
                displayBlock="true"
                xmlns:core="sap.ui.core">
    <Panel id="_IDGenPanel1" headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto" expandable="{devicee>/system/phone}" expanded="{= !${devicee>/system/phone} }">
        <content>
           <Button id="helloDialogButton" 
           icon="sap-icon://action" 
           text="{i18n>helloDialogBut}" 
           press=".onOpenDialog" 
           class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop" />
           
            <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd sapUiHideOnDesktop" />
            <Input value="{/recipient/name}" valueLiveUpdate="true" width="60%" />
            <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements sapthemeHighlight-asColor" />
        </content>
    </Panel>
    <core:Fragment fragmentName="logaligroup.SAPUI5.view.Form01" type="XML"/>
</mvc:View>
